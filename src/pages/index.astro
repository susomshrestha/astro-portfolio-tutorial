---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		image: '/project.jpg',
		title: 'Project 1',
		description: 'This is description for Project 1',
		link: '#',
	},
	{
		image: '/project.jpg',
		title: 'Project 2',
		description: 'This is description for Project 2',
		link: '#',
	},
	{
		image: '/project.jpg',
		title: 'Project 3',
		description: 'This is description for Project 3',
		link: '#',
	},
];
---

<Layout title="Portfolio">
	<main class="max-w-7xl mx-auto px-4 pt-20">
		<!-- Intro Section -->
		<section id="home" class="p-16 min-h-screen mt-16">
			<div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
				<div class="relative flex justify-center">
					<img
						src="/portfolio.png"
						class="w-full md:max-w-md lg:max-w-md"
						alt="Profile Pic"
						width="500"
						height="500"
						loading="lazy"
						decoding="async"
					/>
				</div>
				<div>
					<h1 class="text-4xl font-bold mb-4">John Doe</h1>
					<p class="text-xl text-gray-600 dark:text-gray-400">
						Software Engineer | Web Developer | Tech Enthusiast
					</p>
					<p class="text-lg mt-4">
						Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
						incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
						exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
					</p>
				</div>
			</div>
		</section>

		<!-- Experience Section -->
		<section id="experience" class="p-16">
			<h2 class="text-3xl font-bold text-center mb-10">Experience</h2>
			<div class="space-y-6">
				<div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
					<h3 class="text-xl font-semibold">Senior Software Engineer</h3>
					<p class="text-gray-600 dark:text-gray-400">Tech Company | 2020-Present</p>
					<p>Developed scalable web applications using modern technologies...</p>
				</div>
				<div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
					<h3 class="text-xl font-semibold">Senior Software Engineer</h3>
					<p class="text-gray-600 dark:text-gray-400">Tech Company | 2020-Present</p>
					<p>Developed scalable web applications using modern technologies...</p>
				</div>
				<div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
					<h3 class="text-xl font-semibold">Senior Software Engineer</h3>
					<p class="text-gray-600 dark:text-gray-400">Tech Company | 2020-Present</p>
					<p>Developed scalable web applications using modern technologies...</p>
				</div>
			</div>
		</section>

		<!-- Projects Section -->
		<section id="projects" class="p-16">
			<h2 class="text-3xl font-bold text-center mb-10">Projects</h2>
			<div class="grid md:grid-cols-3 gap-6">
				{
					projects.map((project) => (
						<div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg">
							<img
								src={project.image}
								alt={project.title}
								class="w-full h-48 object-cover rounded-lg mb-4"
							/>
							<h3 class="text-xl font-semibold mb-2">{project.title}</h3>
							<p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
							<a href={project.link} target="_blank" class="text-blue-600 hover:underline">
								View Project
							</a>
						</div>
					))
				}
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="p-16">
			<h2 class="text-3xl font-bold text-center mb-10">Contact Me</h2>
			<form class="max-w-lg mx-auto">
				<div class="mb-4">
					<input
						type="text"
						placeholder="Your Name"
						class="w-full p-2 border rounded dark:bg-gray-700"
						required
					/>
				</div>
				<div class="mb-4">
					<input
						type="email"
						placeholder="Your Email"
						class="w-full p-2 border rounded dark:bg-gray-700"
						required
					/>
				</div>
				<div class="mb-4">
					<textarea
						placeholder="Your Message"
						class="w-full p-2 border rounded dark:bg-gray-700"
						rows="4"
						required></textarea>
				</div>
				<button type="submit" class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700">
					Send Message
				</button>
			</form>
		</section>
	</main>
</Layout>
