---
// src/pages/blog/[id].astro
const { id } = Astro.params; // Extract the `id` parameter from the URL

// Fetch the entire blog data based on the `id`
const response = await fetch(`https://jsonfakery.com/blogs/random/${id}`);
const blog = await response.json();
---

<html lang="en">
	<head>
		<title>{blog.title}</title>
	</head>
	<body class="bg-gray-50">
		<div class="container mx-auto px-4 py-10">
			<h1 class="text-4xl font-bold text-gray-800">{blog.title}</h1>
			<img src={blog.cover} alt={blog.title} class="w-full h-96 object-cover mt-6" />
			<p class="mt-6 text-gray-700">{blog.description}</p>
			<div class="mt-8">
				<h3 class="text-xl font-semibold">Full Content:</h3>
				<div class="mt-4 text-lg">{blog.content}</div>
			</div>
		</div>
	</body>
</html>
