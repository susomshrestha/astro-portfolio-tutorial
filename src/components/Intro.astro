---
import SocialIcons from "./SocialIcons.astro";
---

<section id="home" class="p-16 min-h-screen mt-16">
	<div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
		<div class="relative flex justify-center">
			<img
				src="/portfolio.png"
				class="w-full md:max-w-md lg:max-w-md"
				alt="Profile Pic"
				width="500"
				height="500"
				loading="lazy"
				decoding="async"
			/>
		</div>
		<div>
			<h1 class="text-4xl font-bold mb-4">John Doe</h1>
			<p class="text-xl text-gray-600 dark:text-gray-400">
				Software Engineer | Web Developer | Tech Enthusiast
			</p>
			<p class="text-lg mt-4">
				Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
				labore et dolore magna aliqua.
			</p>
      <div class="mt-4">
        <div class="text-lg mb-2">You can follow me on:</div>
        <SocialIcons height="30" width="30" />
      </div>
		</div>
	</div>
</section>
